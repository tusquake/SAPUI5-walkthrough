<mvc:View controllerName="com.app.project2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="I am the first View">
        <content>
            <form:SimpleForm title="Employee Information" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="0" emptySpanM="0">
                <form:content>
                <!-- <core:Title text="Basic Information"></core:Title> -->
                <Label text="Employee Id" required="true"></Label>
                <Input id="idIpEmpId"></Input>
                <Label text="Employee Name" required="true"></Label>
                <Input id="idIpEmpName" maxLength="20"></Input>
                <Label text="Employee Designation" required="true"></Label>
                <Input id="idIpEmpDesig"></Input>
                <!-- <core:Title text="Contact Information"></core:Title> -->
                <Label text="Employee Skill" required="true"></Label>
                <Input id="idIpEmpSkill"></Input>
                <Label text="Employee Email" required="true"></Label>
                <Input id="idIpEmpEmail"></Input>
                <Label text="Employee Phone" required="true"></Label>
                <Input id="idIpEmpPhone"></Input>
                </form:content>
            </form:SimpleForm>
        </content>
    <footer>
    <Bar>
        <contentRight>
            <Button id="idBtnReg" text="Register" press="onRegister" type="Emphasized" />
            <!-- <Button id="idBtnHideShow" text="Hide" press="onHideShow" type="Emphasized" />
            <Button id="idBtnSub" text="Submit" press="onSubmit" type="Emphasized" /> -->
        </contentRight>
    </Bar>
</footer>
</Page>
    
</mvc:View>
