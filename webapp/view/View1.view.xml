<mvc:View controllerName="com.app.project2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="I am the first View">
        <content>
            <HBox >
                <Text id="idTxtMsg" text="Welcome to SAPUI5" class="sapMH3FontSize" textAlign="Center" width="100%"></Text>
                <Text id="idTxtmail" text="Your Email id is : " class="sapMH3FontSize" textAlign="Center" width="100%"></Text>
                <Label id="idLbName" text="Enter your name" class="sapUiSmallMargin" required="true" design="Bold"></Label>
                <Input id="idIpName" width="30%" value="" placeholder="enter name" maxLength="20"></Input>
                <Label id="idLbEmail" text="Enter your email" class="sapUiSmallMargin" required="true" design="Bold"></Label>
                <Input id="idIpEmail" width="30%" value="" placeholder="enter email" maxLength="30"></Input>
                <Label id="idLbAlign" text="Enter Alignment" class="sapUiSmallMargin" required="true" design="Bold"></Label>
                <Input id="idIpAlign" width="30%" value="" placeholder="enter alignment" maxLength="10"></Input>
                </HBox>
        </content>
    <footer>
    <Bar>
        <contentRight>
            <Button id="idBtnHideShow" text="Hide" press="onHideShow" type="Emphasized" />
            <Button id="idBtnSub" text="Submit" press="onSubmit" type="Emphasized" />
        </contentRight>
    </Bar>
</footer>
</Page>
    
</mvc:View>
