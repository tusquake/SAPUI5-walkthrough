<mvc:View controllerName="com.app.project2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="I am the first View">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="100%">
                <VBox >
                    <Label text="Register" class="sapMH3FontSize" textAlign="Center" width="100%" design="Bold"></Label>
                    <!-- <Text text="Login" class="sapMH3FontSize" textAlign="Center" width="100%"></Text> -->
                    <Label text="Username:" design="Bold" class="sapUiMediumMarginTop mytextcolor mytextfont"></Label>
                    <Input width="400px" id="idIpTxtname" placeholder="Enter your name"></Input>
                    <Label text="Password:" design="Bold" class="sapUiSmallMarginTop mytextcolor mytextfont"></Label>
                    <Input width="400px" placeholder="Enter your password" type="Password"></Input>
                    <Button text="Login" width="400px" type="Emphasized" press="onPress"></Button>
                </VBox>
            </FlexBox>
        </content>
    <footer>
    <Bar>
        <contentRight>
            <!-- <Button id="idBtnHideShow" text="Hide" press="onHideShow" type="Emphasized" />
            <Button id="idBtnSub" text="Submit" press="onSubmit" type="Emphasized" /> -->
        </contentRight>
    </Bar>
</footer>
</Page>
    
