<mvc:View controllerName="com.app.project2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="I am the first View">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" height="50%" width="100%">
        <VBox>
                <Panel expandable="true" headerText="Data Entry" height="100%" width="150%">
                    <HBox>
                        <Label text="First Name :" class="sapUiTinyMargin" />
                        <Input value="{oModel>/firstName}" />
                    </HBox>
                    <HBox>
                        <Label text="Last Name :" class="sapUiTinyMargin" />
                        <Input value="{oModel>/lastName}" />
                    </HBox>
                    <HBox>
                        <Label text="Post :" class="sapUiTinyMargin" />
                        <Input value="{oModel>/post}" />
                    </HBox>
                    <Button text="Success" press="onPressSuccess"/>
                    <Button text="Error" press="onPressError"/>
                </Panel>
            </VBox>
            </FlexBox>
        </content>
    <footer>
    <Bar>
        <contentRight>
            <!-- <Button id="idBtnHideShow" text="Hide" press="onHideShow" type="Emphasized" />
            <Button id="idBtnSub" text="Submit" press="onSubmit" type="Emphasized" /> -->
        </contentRight>
    </Bar>
</footer>
</Page>
    
</mvc:View>
